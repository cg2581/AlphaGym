            <stroke
                android:width="0.1dp"
                android:color="@color/Gray" />

            <solid android:color="#00FFFFFF" />

            <padding android:left="0dp"
                android:right="0dp"
                android:top="1dp"
                android:bottom="0dp" />
        </shape>
    </item>

</layer-list>